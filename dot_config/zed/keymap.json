// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // Pane Navigation
  {
    "context": "Workspace || (Editor && vim_mode == normal)",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },

  // Editor Pane Management
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space |": "pane::SplitRight",
      "space -": "pane::SplitDown"
    }
  },

  // Tab Navigation
  {
    "context": "Workspace || (Editor && vim_mode == normal)",
    "bindings": {
      "alt-shift-h": ["tab_switcher::Toggle", { "select_last": true }],
      "alt-shift-l": "tab_switcher::Toggle"
    }
  },

  // Editor Tab Management
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space w d": "pane::CloseAllItems", // Neovim: close window

      "space b d": "pane::CloseActiveItem", // Neovim: close buffer
      "space b shift-d": "pane::ReopenClosedItem" // Neovim: reopen buffer
    }
  },

  // Override defaults
  {
    "context": "(Editor && vim_mode == insert) || TabSwitcher",
    "bindings": {
      "ctrl-h": "editor::Backspace"
    }
  }
]
